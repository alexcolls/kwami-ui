{
  "name": "@kwami/ui",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/kwami-ui.umd.js",
  "module": "./dist/kwami-ui.es.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/kwami-ui.es.js",
      "require": "./dist/kwami-ui.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "dev:docs": "npm run dev -w docs -- --port 3000",
    "build:docs": "npm run build -w docs",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,json}\" \"docs/src/**/*.{ts,tsx,js,jsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,json}\" \"docs/src/**/*.{ts,tsx,js,jsx,css,json}\""
  },
  "peerDependencies": {
    "iconify-icon": "^2.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "glob": "^13.0.0",
    "prettier": "^3.8.0",
    "prettier-plugin-embed": "^0.5.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^3.6.4"
  },
  "workspaces": [
    "docs"
  ]
}
