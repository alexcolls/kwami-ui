{
  "name": "@kwami/ui",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/kwami-ui.umd.js",
  "module": "./dist/kwami-ui.es.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/kwami-ui.es.js",
      "require": "./dist/kwami-ui.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "dev:demo": "npm run dev -w demo -- --port 3000",
    "build:demo": "npm run build -w demo"
  },
  "peerDependencies": {
    "iconify-icon": "^2.1.0"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.4"
  },
  "workspaces": [
    "demo"
  ]
}